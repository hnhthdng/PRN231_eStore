@using eStoreClient.DTO.Category
@model IEnumerable<CategoryResponseDTO>

<!-- Button to create a new category -->
<a href="/Admin/Category/Create" class="btn btn-primary">Create New Category</a>

<br />
<br />

<!-- Table displaying the list of categories -->
<table class="table">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>
                    <!-- Update Button -->
                    <a href="@Url.Action("Update", new { id = category.CategoryId })" class="btn btn-info btn-sm">Update</a>

                    <!-- Delete Button -->
                    <a href="@Url.Action("Delete", new { id = category.CategoryId })" class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure you want to delete this category?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
