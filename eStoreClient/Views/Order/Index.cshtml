@using eStoreClient.DTO.Order
@model List<OrderResponseDTO> 

@{
    ViewData["Title"] = "Order List";
}

<h2>@ViewData["Title"]</h2>

<!-- Kiểm tra xem có đơn hàng nào không -->
@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Order Date</th>
                <th>Required Date</th>
                <th>Shipped Date</th>
                <th>Freight</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                    <td>@order.RequiredDate.ToString("yyyy-MM-dd")</td>
                    <td>@order.ShippedDate.ToString("yyyy-MM-dd")</td>
                    <td>@order.Freight</td>
                    
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <p>No orders found for this member.</p>
}