@model List<eStoreClient.Models.OrderDetailViewModel>

@{
    ViewData["Title"] = "Order Detail";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Product Name</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th>Discount (%)</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var totalBeforeDiscount = item.UnitPrice * item.Quantity; // Calculate total before discount
            var discountAmount = totalBeforeDiscount * (item.Discount / 100.0); // Apply discount as percentage
            var totalPrice = totalBeforeDiscount - discountAmount; // Subtract discount from total

            <tr>
                <td>@item.OrderId</td>
                <td>@item.ProductName</td>
                <td>@item.UnitPrice</td>
                <td>@item.Quantity</td>
                <td>@item.Discount</td>
                <td>@totalPrice</td>
            </tr>
        }
    </tbody>
</table>
